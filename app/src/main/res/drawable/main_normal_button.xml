<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/pressed1"
                android:endColor="@color/pressed2"
                android:angle="270" />
            <stroke android:width="3dp"  android:color="@color/stroke" />
            <corners android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/focused1"
                android:startColor="@color/focused2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/stroke" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/default1"
                android:startColor="@color/default2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/stroke" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>