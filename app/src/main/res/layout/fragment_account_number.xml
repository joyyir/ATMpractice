<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="joyyir.atmpractice.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@color/atm_display_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="취소"
                android:id="@+id/btnAccNumCancel"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:background="@drawable/main_red_button"
                android:layout_margin="6dp"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/text_account_number"
                android:text="계좌번호"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textStyle="bold"
                android:singleLine="false"
                android:enabled="false" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="확인"
                android:id="@+id/btnAccNumOk"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:background="@drawable/main_green_button"
                android:layout_margin="6dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:background="#ffffff"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수취인의 계좌번호를\n누르시고 &apos;확인&apos;을\n눌러 주십시오"
                        android:id="@+id/text_acc_num_msg"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textIsSelectable="false" />
                </LinearLayout>

            </LinearLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="1"
                        android:id="@+id/btnAccNum1"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="2"
                        android:id="@+id/btnAccNum2"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="3"
                        android:id="@+id/btnAccNum3"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="4"
                        android:id="@+id/btnAccNum4"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="5"
                        android:id="@+id/btnAccNum5"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="6"
                        android:id="@+id/btnAccNum6"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="7"
                        android:id="@+id/btnAccNum7"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="8"
                        android:id="@+id/btnAccNum8"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="9"
                        android:id="@+id/btnAccNum9"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="&lt;-"
                        android:id="@+id/btnAccNumBack"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="0"
                        android:id="@+id/btnAccNum0"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_normal_button"
                        android:layout_margin="3dp"
                        android:textSize="25dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="정정"
                        android:id="@+id/btnAccNumDel"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_orange_button"
                        android:layout_margin="3dp"
                        android:textSize="18dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/etAccNum"
                    android:layout_weight="1"
                    android:background="#ffa86f"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:editable="false"
                    android:textAlignment="textEnd"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
